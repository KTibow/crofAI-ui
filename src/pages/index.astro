---
import Layout from "../layouts/Layout.astro";
import Actions from "../components/home/Actions.astro";
import Usage from "../components/home/Usage.astro";
import Billing from "../components/home/Billing.astro";
import Account from "../components/home/Account.astro";
---

<Layout title="Home" footerPushToBottom={true} loggedIn="y">
  <Actions />
  <Usage />
  <main>
    <Billing />
    <Account />
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
    max-width: 50rem;
    align-self: center;

    > * {
      margin-top: 1em;
    }
  }
</style>
