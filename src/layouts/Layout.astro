---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/base.css";
import icon from "../lib/icon.svg?url";

interface Props {
  title: string;
  includeHeader?: boolean;
  includeFooter?: boolean;
  footerPushToBottom?: boolean;
}

const {
  title,
  includeHeader = true,
  includeFooter = true,
  footerPushToBottom = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href={icon} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    {includeHeader && <Header />}
    <slot />
    {includeFooter && <Footer pushToBottom={footerPushToBottom} />}
    <script>
      import "../lib/etc/layer.ts";
    </script>
  </body>
</html>
