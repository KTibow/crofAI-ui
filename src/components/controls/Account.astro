<h2 class="font-headline-large">Account</h2>
<form class="delete-form" action="/settings-api/delete-user">
  <button class="delete font-label-large layer"> Delete account </button>
</form>

<script>
  const deleteForm = document.querySelector(".delete-form") as HTMLFormElement;
  deleteForm.onsubmit = (e) => {
    const confirmation = prompt(
      'This action cannot be undone. Type "Delete my account" to confirm.',
    );
    if (confirmation != "Delete my account") {
      e.preventDefault();
      alert("Account deletion cancelled.");
    }
  };
</script>

<style>
  .delete-form {
    display: contents;
  }
  .delete {
    display: flex;
    align-items: center;
    align-self: start;
    height: 2rem;
    border-radius: 1rem;
    padding-inline: 1rem;
    background-color: rgb(var(--m3-scheme-error));
    color: rgb(var(--m3-scheme-on-error));
    cursor: pointer;
    position: relative;
  }
</style>
